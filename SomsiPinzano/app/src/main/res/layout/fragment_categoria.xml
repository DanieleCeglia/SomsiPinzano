<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/fragment_categoria"
    android:gravity="center_vertical"
    android:background="@drawable/ombra">

    <ImageView
        android:id="@+id/ivImmagineCategoria"
        android:layout_width="100dp"
        android:layout_height="162dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitoloCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginLeft="16dp"
            android:text="TITOLO"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tvDescrizioneCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_marginLeft="16dp"
            android:text="Descrizione  adasd asd asdas das das das dasdsad asd asd asdasd as das dasd asdasdsada sda @string/about"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:textColor="@color/colorSecondaryText" />

    </LinearLayout>

</LinearLayout>
